---
import BaseLayout from './BaseLayout.astro';
import Tag from '../components/ui/Tag.astro';
import Button from '../components/ui/Button.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  generatedBy?: 'human' | 'agent';
  agentContext?: string;
}

const { title, description, pubDate, updatedDate, tags = [], generatedBy, agentContext } = Astro.props;

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description}>
  <article class="py-16">
    <div class="container max-w-screen-md mx-auto px-4">
      <header class="mb-10">
        <div class="mb-4">
          <Button href="/blog" variant="outline" size="sm">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Blog
          </Button>
        </div>

        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {title}
        </h1>

        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 mb-4">
          <time datetime={pubDate.toISOString()}>
            {formattedPubDate}
          </time>

          {updatedDate && (
            <span>
              Updated: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time>
            </span>
          )}

          {generatedBy === 'agent' && (
            <span class="bg-purple-100 text-purple-700 px-2 py-1 rounded text-xs font-medium">
              AI-Generated Update
            </span>
          )}
        </div>

        {agentContext && (
          <div class="bg-purple-50 border border-purple-100 rounded-lg p-4 text-sm text-purple-800 mb-4">
            <strong>Context:</strong> {agentContext}
          </div>
        )}

        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <Tag label={tag} />
            ))}
          </div>
        )}
      </header>

      <div class="prose prose-gray max-w-none prose-headings:text-gray-900 prose-a:text-blue-600 prose-code:text-gray-800 prose-code:bg-gray-100 prose-code:px-1 prose-code:rounded">
        <slot />
      </div>

      <footer class="mt-16 pt-8 border-t border-gray-100">
        <Button href="/blog" variant="outline">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Blog
        </Button>
      </footer>
    </div>
  </article>
</BaseLayout>
