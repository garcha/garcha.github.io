---
import BaseLayout from './BaseLayout.astro';
import Tag from '../components/ui/Tag.astro';
import Button from '../components/ui/Button.astro';

interface Props {
  title: string;
  tagline: string;
  description: string;
  status: 'active' | 'beta' | 'development' | 'archived';
  techStack: string[];
  category: string;
  url?: string;
  github?: string;
  startDate?: Date;
  launchDate?: Date;
  problem?: string;
  solution?: string;
  impact?: string;
}

const {
  title,
  tagline,
  description,
  status,
  techStack,
  category,
  url,
  github,
  startDate,
  launchDate,
  problem,
  solution,
  impact,
} = Astro.props;

const statusColors = {
  active: { bg: 'bg-green-100', text: 'text-green-700', label: 'Active' },
  beta: { bg: 'bg-blue-100', text: 'text-blue-700', label: 'Beta' },
  development: { bg: 'bg-yellow-100', text: 'text-yellow-700', label: 'In Development' },
  archived: { bg: 'bg-gray-100', text: 'text-gray-700', label: 'Archived' },
};

const statusStyle = statusColors[status];

const formattedStartDate = startDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
});

const formattedLaunchDate = launchDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
});
---

<BaseLayout title={title} description={description}>
  <article class="py-16">
    <div class="container max-w-screen-lg mx-auto px-4">
      <header class="mb-10">
        <div class="mb-4">
          <Button href="/projects" variant="outline" size="sm">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            All Projects
          </Button>
        </div>

        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class={`px-3 py-1 rounded-full text-sm font-medium ${statusStyle.bg} ${statusStyle.text}`}>
            {statusStyle.label}
          </span>
          <span class="text-sm text-gray-400 uppercase tracking-wider">{category}</span>
        </div>

        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
          {title}
        </h1>

        <p class="text-xl text-gray-600 mb-6">
          {tagline}
        </p>

        <div class="flex flex-wrap gap-4 mb-6">
          {url && (
            <Button href={url} external>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Visit Site
            </Button>
          )}
          {github && (
            <Button href={github} variant="outline" external>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View Source
            </Button>
          )}
        </div>

        <div class="flex flex-wrap gap-2 mb-6">
          {techStack.map((tech) => (
            <Tag label={tech} />
          ))}
        </div>

        {(startDate || launchDate) && (
          <div class="text-sm text-gray-500">
            {startDate && <span>Started: {formattedStartDate}</span>}
            {launchDate && <span>{startDate ? ' | ' : ''}Launched: {formattedLaunchDate}</span>}
          </div>
        )}
      </header>

      {(problem || solution || impact) && (
        <div class="grid md:grid-cols-3 gap-6 mb-10">
          {problem && (
            <div class="bg-red-50 border border-red-100 rounded-lg p-6">
              <h3 class="text-sm font-semibold text-red-800 uppercase tracking-wider mb-2">Problem</h3>
              <p class="text-red-700 text-sm">{problem}</p>
            </div>
          )}
          {solution && (
            <div class="bg-blue-50 border border-blue-100 rounded-lg p-6">
              <h3 class="text-sm font-semibold text-blue-800 uppercase tracking-wider mb-2">Solution</h3>
              <p class="text-blue-700 text-sm">{solution}</p>
            </div>
          )}
          {impact && (
            <div class="bg-green-50 border border-green-100 rounded-lg p-6">
              <h3 class="text-sm font-semibold text-green-800 uppercase tracking-wider mb-2">Impact</h3>
              <p class="text-green-700 text-sm">{impact}</p>
            </div>
          )}
        </div>
      )}

      <div class="prose prose-gray max-w-none prose-headings:text-gray-900 prose-a:text-blue-600">
        <slot />
      </div>

      <footer class="mt-16 pt-8 border-t border-gray-100">
        <Button href="/projects" variant="outline">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          All Projects
        </Button>
      </footer>
    </div>
  </article>
</BaseLayout>
