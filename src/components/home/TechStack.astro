---
import SectionHeader from '../ui/SectionHeader.astro';
import Tag from '../ui/Tag.astro';

const categories = [
  {
    name: 'Languages',
    items: ['Ruby', 'SQL', 'Elixir', 'Golang', 'JavaScript/ES', 'TypeScript'],
  },
  {
    name: 'Frameworks',
    items: ['Ruby on Rails', 'Phoenix LiveView', 'ReactJS', 'Apollo GraphQL'],
  },
  {
    name: 'Data & APIs',
    items: ['PostgreSQL', 'ActiveRecord', 'Google APIs', 'Firebase'],
  },
  {
    name: 'Infrastructure',
    items: ['AWS Lambda', 'Docker', 'Heroku', 'Git/GitHub', 'Linux/Ubuntu'],
  },
  {
    name: 'AI & Tooling',
    items: ['OpenAI', 'Ollama/Llama', 'SAM CLI', 'Watir Testing', 'Ruby Scripts'],
  },
  {
    name: 'Practices',
    items: ['RSpec', 'Cucumber', 'Code Review', 'Observability', 'Incremental Delivery', 'Agile'],
  },
];
---

<section class="py-16 bg-gray-50">
  <div class="container max-w-screen-xl mx-auto px-4">
    <SectionHeader
      title="Tools & Stack"
      subtitle="Technologies I work with daily"
    />

    <div class="space-y-6">
      {categories.map((category) => (
        <div class="flex flex-col md:flex-row md:items-center gap-3">
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider md:w-40 flex-shrink-0">
            {category.name}
          </h3>
          <div class="flex flex-wrap gap-2">
            {category.items.map((item) => (
              <Tag label={item} />
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
