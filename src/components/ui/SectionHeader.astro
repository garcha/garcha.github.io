---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className } = Astro.props;
---

<div class:list={['mb-10', className]}>
  <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-2">
    {title}
  </h2>
  {subtitle && (
    <p class="text-gray-600 max-w-2xl">
      {subtitle}
    </p>
  )}
</div>
